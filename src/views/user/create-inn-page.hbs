          <input
            type='text'
            class='form-control mt-1'
            id='exampleInputPassword1'
            placeholder='Tên'
            name='name'
            value='{{this.name}}'
          />
          <input
            type='text'
            class='form-control mt-1'
            id='exampleInputPassword1'
            placeholder='Facebook'
            name='facebook'
            value='{{this.facebook}}'
          />
          <input
            type='text'
            class='form-control mt-1'
            id='exampleInputPassword1'
            placeholder='Số điện thoại'
            name='phoneNumber'
            value='phone_number'
          />
          <input
            type='text'
            class='form-control mt-1'
            id='exampleInputPassword1'
            placeholder='Zalo'
            name='zalo'
            value='{{this.zalo}}'
          />
        </div>
      </div>

      <div class='shadow p-4-20 mt-30'>
        <div class='w-100 mt-4'>
          <div>
            <input type='file' name='uploaded_file' />
          </div>
          <div class='flex'>
            <div>
              <label class='custom-file-upload'>
                <input type='file' multiple name='uploaded_file' id='gallery-photo-add4' class='t-c' />
                Thêm ảnh
              </label>
            </div>
            <div class='flex-1 ml-20px image-container-height gallery pl-2 t-align-center gallery4'>
            </div>
          </div>
        </div>
      </div>
      <div class='flex-align-center'>
        <input type='submit' value='Thêm mới bài đăng trọ' class='mt-4 button flex-align-center button-width' />
      </div>
    </form>
  </div>
{{/with}}


<script>
    $(function() {
    // Multiple images preview in browser
    var imagesPreview = function(input, placeToInsertImagePreview) {

        if (input.files) {
            var filesAmount = input.files.length;

            for (i = 0; i < filesAmount; i++) {
                var reader = new FileReader();

                reader.onload = function(event) {
                    $($.parseHTML('<img>'))
                    .attr('src', event.target.result)
                    .attr('class', 'image-wh')
                    .appendTo(placeToInsertImagePreview);
                };

                reader.readAsDataURL(input.files[i]);
            }
        }

    };

    $('#gallery-photo-add4').on('change', function() {
        imagesPreview(this, 'div.gallery4');
    });
});
</script>