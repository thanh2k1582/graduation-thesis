<div class="shadow p-60 mt-50">
{{!--  --}}
<div class="flex">
    {{#if statusWaiting}}
       <div class="alert alert-warning alert-dismissible fade show w-100 t-align-center">
        <strong>Xin hãy đợi!</strong> Bài viết đang trong quá trình xử lý.
      </div>
    {{/if}}
    {{#if statusSuccess}}
      <div class="alert alert-success alert-dismissible fade show w-100 t-align-center">
        <strong>Thành công !</strong> Bài viết đã được kiểm duyệt thành công.
      </div>
    {{/if}}
    {{#if statusFailed}}
      {{#with statusFailed}}
        <div class="alert alert-danger alert-dismissible fade show w-100 t-align-center">
          <strong>Đăng tải bài viết không thành công!</strong> Bài viết đã bị từ chối với lý do: 
          <strong>{{reason}}</strong>
        </div>
      {{/with}}
    {{/if}}
    {{#if statusDrop}}
        <div class="alert alert-danger alert-dismissible fade show w-100 t-align-center flex-align-center">
          <strong>Bài viết đã bị gỡ bỏ!</strong> Hãy xem lý do: 
          <div class="t-align-left ml-2">
            {{#each statusDrop}}
                <strong>- {{this.content}} <br> </strong>
            {{/each}}
          </div>
        </div>
    {{/if}}
    
  <div class="flex-1">
  </div>
</div>
{{!--  --}}
<div class="relative mt-20">
  <div class="slide-container mr-ml-10px">
  <div class="slide-child-container relative">
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {{#each image}}
        <div class="swiper-slide bg-i-slide-home" style="background-image: url('/images/{{this}}')">
        </div>
        {{/each}}
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>
</div>
{{#with post}}
<div class="ml-20px">
        <div class="mt-4">
        <h5 class="t-c">
            {{title}}
        </h5>
        <div class="ml-20px">
            <p class="p">
            Địa chỉ: 
            {{address}}
            </p>
            <p>Giá thuê: {{price}} triệu/tháng</p>
            <p>Diện tích: {{acreage}} m2</p>
        </div>
        </div>
        <div>
            <h5 class="t-c">Thông tin mô tả</h5>
            <div class="ml-20px">
              {{{description}}}
            </div>
        </div>
        <h5 class="t-c">Địa điểm đăng tin: </h5>
        <div class="ml-10">
            <table class="table"><tbody><tr><td class="name">Mã tin:</td><td>#{{this.id}}</td></tr><tr><td class="name">Khu vực</td><td> {{this.county_name}} </td></tr>
            <tr><td class="name">Mục đích: </td><td>{{this.purpose}}</td></tr>
            <tr><td class="name">Loại tin rao:</td><td>Phòng trọ, nhà trọ</td></tr><tr><td class="name">Đối tượng thuê:</td><td>{{this.object}}</td></tr></tbody></table>
        </div>
    {{/with}}
    {{#with user}}
        <h5 class="t-c">Thông tin liên hệ: </h5>
        <div class="ml-10">
            <table class="table"><tbody><tr><td class="name">Liên hệ:</td><td>{{this.name}}</td></tr><tr><td class="name">Điện thoại:</td><td>{{this.phone_number}}</td></tr><tr><td class="name">Facebook</td><td><a 
            target="_blank" href="{{this.facebook}}">{{this.facebook}}</a></td></tr>
            <tr>
              <td class="name">Zalo</td><td><a target="_blank" href="https://zalo.me/{{this.zalo}}">{{this.zalo}}</a></td>
            </tr>
            </tbody></table>
        </div>
      {{/with}}
</div>
<div class="flex">
  <div class="flex-1">

  </div>
  <div>
  {{#with user}}
    <button class="button button-width">
      <a href="/{{this.google_account_id}}{{/with}}{{#with post}}/edit/{{this.id}}" class="a-hover-w">CHỈNH SỬA BÀI VIẾT</a>
    </button>
  {{/with}}
  </div>
</div>
</div>

{{!-- swiper --}}
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
      var swiper = new Swiper(".mySwiper", {
        spaceBetween: 30,
        centeredSlides: true,
        speed: 500,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
        },
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        effect: 'slide',
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev",
        },
      });
    </script>